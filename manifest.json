{
  "manifest_version": 2,
  "name": "Relay.me",
  "description": "This extension will recommend professionals who matchskills/experiences for a position.",
  "version": "2.0",
  "background": {
    "service_worker": "./background.js"
  },
  "browser_action": {
      "default_icon": "assets/icon.png",
      "default_title": "Relay.me",
      "default_popup": "popup.html"
    },
  "options_page": "options.html",
  "permissions": [
      "activeTab",
      "tabs",
      "https://airtable.com/*",
      "storage",
      "<all_urls>",
      "pageCapture",
      "downloads" 
    ]
}
